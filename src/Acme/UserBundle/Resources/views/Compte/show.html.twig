{% extends "UserBundle::layout.html.twig" %}

{% block title %}Gitlin - Comptes Bancaires{% endblock %}
{% block contenu %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th>Nom</th>
                        <th>Num√©ro</th>
                        <th>Solde</th>
                        <th>&nbsp</th>
                        <th>&nbsp</th>
                        <th>&nbsp</th>
                    </tr>

                    {% for compte in comptes %}
                        {% if compte.actif == 1 %}
                            <tr>
                                <td>{{ compte.nom }} - {{loop.index - 1}}</td>
                                <td>{{ compte.numeroCompte }}</td>
                                <td>{{ soldeOp[loop.index-1]['solde'] }}</td>

                                <td><a href="{{ path('supprCompte', {'id' : compte.id} )}}"
                                       class="close confirm-del-fiche" >
                                        <span class="glyphicon glyphicon-remove-circle"></span>
                                    </a>
                                </td>

                                <td><a href="{{ path('modifCompte', {'id' : compte.id} )}}"
                                       class="close confirm-del-fiche" >
                                        <span class="glyphicon glyphicon-wrench"></span>
                                    </a>
                                </td>
                                <td><a href="{{ path('detailCompte', {'id' : compte.id} )}}"
                                       class="close confirm-del-fiche" >
                                        <span class="glyphicon glyphicon-wrench"></span>
                                    </a>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

{% endblock %}


